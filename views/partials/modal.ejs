<div class="modal fade my-container" id="DeleteConfirmation" tabindex="-1" role="dialog"
    aria-labelledby="DeleteConfirmationLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DeleteConfirmationLabel">Delete Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure to delete
            </div>
            <div class="modal-footer">
                <button type="button" class="btn my-outline-btn" data-dismiss="modal">Cancel</button>
                <form action="/posts/delete" method="post">
                    <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                    <input id="postId" type="hidden" name="postId">
                    <button type="submit" class="btn my-primary-contain-btn">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>