<%- include('../partials/head.ejs') %>
<%- include('../partials/navigation.ejs') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-3">
            <form action="/account" method="post" class="my-account-avatar-container" enctype="multipart/form-data">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                <div class="form-group">
                    <input type="file" name="avatar" id="avatar" accept="image/jpg,image/jpeg,image/png">
                    <label for="avatar"
                        class="account-avatar <%= invalidAvatar ? 'is-invalid' : '' %> <%= user.avatar? 'active' : '' %> "
                        id="avatar-label">
                        <span id="avatar-image">
                            <%- include('../partials/avatar.ejs',{user:user}) %>
                        </span>
                        <span id="defImage">
                            <svg>
                                <use xlink:href="/img/icons.svg#camera" />
                            </svg>
                        </span>

                    </label>
                </div>
                <div class="form-group upload-btn-container">
                    <button type="submit" class="btn btn-sm my-primary-contain-btn">Upload</button>
                </div>
                <% if(message) {%>
                <div class="alert alert-danger my-alert" role="alert">
                    <%= message %>
                </div>
                <% } %>
            </form>
        </div>
        <div class="col-md-9">

        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>