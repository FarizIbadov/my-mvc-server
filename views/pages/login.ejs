<%- include('../partials/head.ejs') %>
<%- include('../partials/navigation.ejs') %>

<div class="container mt-5">
    <form autocomplete="off" action="/account/login" method="post" class="my-form">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <% if(message) { %>
        <div class="alert alert-danger my-alert" role="alert">
            <%= message %>
        </div>
        <% } %>
        <div class="form-group my-form-group">
            <label for="username">Username</label>
            <input type="text" class="form-control my-form-control <%= isInvalid.username %>" id="username"
                name="username">
        </div>
        <div class="form-group my-form-group">
            <label for="password">Password</label>
            <input type="password" class="form-control my-form-control <%= isInvalid.password  %>" id="password"
                name="password">
        </div>

        <div class="form-group my-form-group">
            <button type="submit" class="btn my-primary-contain-btn">Sign In</button>
        </div>
    </form>
</div>

<%- include('../partials/footer.ejs') %>